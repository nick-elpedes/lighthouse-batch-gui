<%- include('../head.ejs') %>
<body>
  <h1>Generate Bulk Page Lighthouse Report</h1>
  <br />
  <br />
  <form
    id="urlForm"
    action="/reports/generate"
    method="post"
    enctype="multipart/form-data"
  >
    <label for="url">Input URL</label> <input type="url" name="url" id="url" />

    <br /><br />
    OR
    <br /><br />

    <label for="csvFile">Upload CSV File</label>
    <input type="file" name="csvFile" id="csvFile" />

    <br />
    <br />

    <h2>Settings</h2>
    <label for="emulationMode">Emulate Mobile Device?</label>
    <input type="checkbox" name="emulationMode" id="emulationMode" />

    <br />
    <br />
    <input type="submit" value="Generate" />
  </form>
</body>
